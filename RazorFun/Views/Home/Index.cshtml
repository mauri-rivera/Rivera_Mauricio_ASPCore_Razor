<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Razor Fun</title>
    </head>
    <body>
        @{
            List<string> FoodList = new List<string>()
                { 
                    "Apple Pie",
                    "Pizza",
                    "Cinnamon Rolls",
                    "Lasagna", "Donuts",
                    "Chololate Cake",
                    "Burritos" 
                };

            <p>Here is my list of foods:</p>

            string primerCaracter = "C";
            bool coincidencia = false;

            @foreach (string food in FoodList)
            {
                coincidencia = food.Contains(primerCaracter);

                <div>
                    @if (!coincidencia)
                    {
                        <p>@food</p>
                    }
                    else
                    {
                        <p style="color: red">@food</p>
                    }
                </div>
            }
        }
    </body>
</html>